{
  "name": "codejar",
  "version": "3.4.0",
  "description": "An embeddable code editor for the browser",
  "license": "MIT",
  "repository": "antonmedv/codejar",
  "author": "Anton Medvedev <anton@medv.io>",
  "homepage": "https://medv.io/codejar/",
  "main": "src/index.ts",
  "scripts": {
    "start": "rollup --config rollup.config_es.js -w",
    "build:js": "rollup --config rollup.config.js",
    "build:es": "rollup --config rollup.config_es.js",
    "build": "rm -rf ./dist && npm run build:js && npm run build:es && cp LICENSE dist/LICENSE",
    "release": "release-it"
  },
  "devDependencies": {
    "rollup": "^2.38.5",
    "@rollup/plugin-typescript": "^8.1.1",
    "gzip-size-cli": "^3.0.0",
    "release-it": "^14.5.1",
    "rollup-plugin-generate-package-json": "^3.2.0",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-license": "^2.5.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "hooks": {
      "after:bump": "npm run build"
    }
  }
}
